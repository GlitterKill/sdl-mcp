{
  "repos": [
    {
      "repoId": "sdl-mcp",
      "rootPath": "F:/Claude/projects/sdl-mcp/sdl-mcp",
      "ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/.next/**",
        "**/build/**",
        "**/.git/**",
        "**/coverage/**"
      ],
      "languages": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "py",
        "go",
        "java",
        "cs",
        "c",
        "cpp",
        "php",
        "rs",
        "kt",
        "sh"
      ],
      "maxFileBytes": 2000000
    }
  ],
  "dbPath": "F:\\Claude\\projects\\sdl-mcp\\sdl-mcp\\data\\sdlmcp.sqlite",
  "policy": {
    "maxWindowLines": 180,
    "maxWindowTokens": 1400,
    "requireIdentifiers": true,
    "allowBreakGlass": true
  },
  "redaction": {
    "enabled": true,
    "includeDefaults": true,
    "patterns": []
  },
  "indexing": {
    "concurrency": 8,
    "enableFileWatching": false
  },
  "slice": {
    "defaultMaxCards": 60,
    "defaultMaxTokens": 12000,
    "edgeWeights": {
      "call": 1,
      "import": 0.6,
      "config": 0.8
    }
  }
}