{
  "name": "sdl-mcp",
  "version": "0.6.7",
  "description": "Symbol Delta Ledger MCP Server - Cards-first code context for TypeScript/JavaScript repositories",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "sdl-mcp": "dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlitterKill/sdl-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/GlitterKill/sdl-mcp/issues"
  },
  "homepage": "https://github.com/GlitterKill/sdl-mcp#readme",
  "files": [
    "dist",
    "config",
    "migrations",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean:dist": "node scripts/clean-dist.mjs",
    "build": "tsc -p tsconfig.build.json",
    "build:scripts": "tsc -p tsconfig.scripts.json && tsx scripts/fix-imports.ts",
    "build:runtime": "npm run clean:dist && npm run build",
    "build:all": "npm run clean:dist && npm run build && npm run build:scripts",
    "watch": "tsc -p tsconfig.build.json --watch",
    "dev": "tsx src/main.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node scripts/run-tests.mjs",
    "test:harness": "npm run test:adapters",
    "test:adapters": "npm run build && npx tsc --rootDir tests/harness --outDir dist/tests/harness --module nodenext tests/harness/adapter-runner.ts && node dist/tests/harness/adapter-runner.js",
    "test:golden": "npm run build && tsx scripts/golden/update-goldens.ts validate",
    "golden:update": "npm run build && tsx scripts/golden/update-goldens.ts generate",
    "benchmark:ci": "node dist/cli/index.js benchmark:ci",
    "migrate": "npm run build:scripts && node dist/scripts/migrate.js",
    "index": "npm run build:scripts && node dist/scripts/index-repo.js",
    "index-repo": "npm run build:scripts && node dist/scripts/index-repo.js",
    "dump-symbol": "npm run build:scripts && node dist/scripts/dump-symbol.js",
    "benchmark": "tsx scripts/benchmark.ts",
    "benchmark:real": "tsx scripts/real-world-benchmark.ts",
    "benchmark:matrix": "tsx scripts/real-world-benchmark-matrix.ts",
    "benchmark:claims": "tsx scripts/check-benchmark-claims.ts",
    "benchmark:sweep": "tsx scripts/budget-sensitivity-sweep.ts",
    "benchmark:record-trace": "tsx scripts/record-trace.ts",
    "benchmark:setup-external": "tsx scripts/setup-external-benchmark-repos.ts",
    "benchmark:v067": "tsx scripts/benchmark/v067-baseline.ts",
    "benchmark:v067:check": "tsx scripts/benchmark/v067-baseline.ts --check devdocs/benchmarks/v067-baseline.json",
    "benchmark:v067:save": "tsx scripts/benchmark/v067-baseline.ts --out devdocs/benchmarks/v067-baseline.json",
    "package:exe": "node scripts/build-exe.js",
    "prepack": "npm run build:runtime",
    "build:native": "cd native && npx @napi-rs/cli build --release",
    "build:native:debug": "cd native && npx @napi-rs/cli build",
    "test:native-parity": "node --import tsx tests/native/parity-test.ts",
    "prepublishOnly": "npm run build:all && npm run lint && npm run typecheck"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-indexing",
    "symbol-ledger",
    "typescript",
    "javascript",
    "code-context",
    "ast",
    "code-analysis",
    "developer-tools"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^1.30.0",
    "@opentelemetry/sdk-trace-node": "^1.30.0",
    "better-sqlite3": "^11.0.0",
    "fast-glob": "^3.3.3",
    "tree-sitter": "^0.21.1",
    "tree-sitter-bash": "^0.21.0",
    "tree-sitter-c": "^0.21.0",
    "tree-sitter-c-sharp": "0.23.1",
    "tree-sitter-cpp": "^0.21.0",
    "tree-sitter-go": "0.23.4",
    "tree-sitter-java": "0.23.5",
    "tree-sitter-kotlin": "0.3.8",
    "tree-sitter-php": "0.22.8",
    "tree-sitter-python": "0.23.3",
    "tree-sitter-rust": "0.21.0",
    "tree-sitter-typescript": "0.23.2",
    "typescript": "^5.9.3",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "optionalDependencies": {
    "chokidar": "^3.5.3",
    "onnxruntime-node": "^1.22.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@opentelemetry/sdk-trace-web": "^1.30.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.32.0",
    "fast-check": "^3.23.2",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
